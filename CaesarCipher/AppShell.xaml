                  Title="Шифр цезаря" />

    <ShellContent ContentTemplate="{DataTemplate views:VigenerePage}"
                  Route="VigenerePage"
                  Title="Шифр Віженера" />

    <ShellContent ContentTemplate="{DataTemplate views:AboutPage}"
                  Route="AboutPage"
                  Title="About page" />

