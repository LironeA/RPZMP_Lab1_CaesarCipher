       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CaesarCipher.Views"
       Shell.FlyoutBehavior="Flyout"
       Title="CaesarCipher">

    <ShellContent ContentTemplate="{DataTemplate views:CaesarPage}"
